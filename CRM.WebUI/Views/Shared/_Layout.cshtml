@{
	var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
	var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
	Dictionary<string, List<string>> menuItems = new Dictionary<string, List<string>>();
}


<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CRM</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet"
		  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
	<link rel="stylesheet" href="~/css/style-main.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/utils.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CRM</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@if (User.Identity!.IsAuthenticated)
						{
							menuItems.Add("Company", new List<string> { "Index" });
							menuItems.Add("Product", new List<string> { "Index" });
							menuItems.Add("Auth", new List<string> { "Logout" });
						}
						else
						{
							menuItems.Add("Company", new List<string> { "Index" });
							menuItems.Add("Product", new List<string> { "Index" });
							menuItems.Add("Auth", new List<string> { "Login", "Register" });
						}
						@foreach (var element in menuItems)
						{
							@foreach (string value in element.Value)
							{
								if (element.Key != currentController || value != currentAction)
								{
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="@element.Key" asp-action="@value">@(value == "Index" ? element.Key : value)</a>
									</li>
								}
							}
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<main role="main">
		@RenderBody()
	</main>

	<footer class="border-top footer text-muted">
		&copy; 2023 - CRM
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>