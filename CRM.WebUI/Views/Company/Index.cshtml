@{
	Layout = "_layout";
	ViewData["Title"] = "Companies";
}
@model List<Company>

<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>CRM Application</title>
	<link rel="stylesheet" type="text/css" href="/css/list.css">
	<link rel="stylesheet" href="~/css/style-main.css" />
	<link rel="stylesheet" href="~/css/style-table.css" />
	<link rel="stylesheet" href="~/css/style-radio.css" />

</head>
<body>

	@if (Model.Count > 0)
	{
		<div style="display:flex;justify-content:center">
			<table>
				<thead>
					<tr>
						<th>Companies</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var company in Model)
					{
						<tr>
							<td>@company.Name</td>
							<td><a href="/Company/Products/@company.Id">Products</a></td>
							<td><a href="/Company/Employees/@company.Id">Employees</a></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	}
	else
	{
		<h3 style="text-align:center">No companies found.</h3>
	}
</body>
</html>

