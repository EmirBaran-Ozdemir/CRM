@model AddProductModel

@{
	ViewData["Title"] = "Add Product";
	Layout = "_layout";
}
<head>
	<!-- Custom CSS -->
	<link rel="stylesheet" href="~/css/style-main.css" />
	<link rel="stylesheet" href="~/css/product/style-addProduct.css" />
	<link rel="stylesheet" href="~/css/style-inputs.css" />
	<link rel="stylesheet" href="~/css/style-radio.css" />
	<script src="~/js/radio-button.js"></script>

</head>

<!-- add product -->
<section class="addProduct">
	<div class="container">
		<div class="row">
			<div class="col-lg-4 m-auto">
				<div class="card m-auto">
					<div class="card-body">
						<div class="form">
							<h2 style="display:flex; justify-content:center">Add Product</h2>



							@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
							{
								<div class="input-field">
									@Html.TextBoxFor(x=>x.Product.Name, new { @class = "form-control", @placeholder = "Name", @required = "required" })
									@Html.ValidationMessageFor(x => x.Product.Name, "", new { @class = "text-error" })
									<i class="fa-solid fa-cart-shopping icon"></i>

								</div>

								<div class="input-field">
									@Html.TextBoxFor(x=>x.Product.Details, new { @class = "form-control", @placeholder = "Details", @required = "required"})
									@Html.ValidationMessageFor(x => x.Product.Details, "", new { @class = "text-error" })
									<i class="fa-solid fa-circle-info icon"></i>
								</div>
								<div class="input-field">
									@Html.TextBoxFor(x=>x.Product.Price, new { @class = "form-control", @placeholder = "Price", @required = "required"})
									@Html.ValidationMessageFor(x => x.Product.Price, "", new { @class = "text-error" })
									<i class="fa-regular fa-dollar-sign icon"></i>
								</div>

								<br />
								<div style="display:flex;justify-content:center">
								<div class="radio-container">
									@Html.RadioButtonFor(x => x.Product.ProductTypeId, "1", new { @class = "form-control", @id = "radio-lifetime", @onclick = "switchRadioColors(document.getElementById('lifetime-label'), document.getElementById('membership-label'))", @required = "required" })
									@Html.ValidationMessageFor(x => x.Product.ProductTypeId, "", new { @class = "text-error" })
									<label id="lifetime-label" for="radio-lifetime">Lifetime License</label>
								</div>

								<div class="radio-container">
									@Html.RadioButtonFor(x => x.Product.ProductTypeId, "2", new { @class = "form-control", @id = "radio-membership", @onclick = "switchRadioColors(document.getElementById('membership-label'), document.getElementById('lifetime-label'))"})
									@Html.ValidationMessageFor(x => x.Product.ProductTypeId, "", new { @class = "text-error" })
									<label id="membership-label" for="radio-membership">Membership License</label>
								</div>
								</div>

								<button type="submit" class="load btn_primary mt-3 mb-3" id="create">
									Add Product
								</button>
							}

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
